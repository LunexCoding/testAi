<UserControl x:Class="OrderApprovalSystem.Components.ApprovalHistoryTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OrderApprovalSystem.Models"
             xmlns:converters="clr-namespace:OrderApprovalSystem.Converters"
             Background="{DynamicResource SecondaryBackgroundBrush}">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:LevelToIndentConverter x:Key="LevelToIndentConverter"/>

        <!-- Style for TreeViewItem to support expand/collapse -->
        <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!-- Item Header with Expander -->
                            <Border Grid.Row="0" 
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <!-- Expander Toggle Button positioned absolutely at the left -->
                                    <ToggleButton x:Name="Expander"
                                                  IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Width="16"
                                                  Height="16"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,2,0"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    Padding="0">
                                                                <Path x:Name="ExpandPath"
                                                                      Data="M 0 0 L 0 6 L 6 3 Z"
                                                                      Fill="{DynamicResource TextBrush}"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center">
                                                                    <Path.RenderTransform>
                                                                        <RotateTransform Angle="0" CenterX="3" CenterY="3"/>
                                                                    </Path.RenderTransform>
                                                                </Path>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetName="ExpandPath"
                                                                                               Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                                               To="90"
                                                                                               Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>
                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetName="ExpandPath"
                                                                                               Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                                               To="0"
                                                                                               Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="ExpandPath" Property="Fill" Value="{DynamicResource AccentBrush}"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>

                                    <!-- Content Presenter -->
                                    <ContentPresenter x:Name="PART_Header"
                                                      ContentSource="Header"
                                                      HorizontalAlignment="Stretch"
                                                      Margin="18,0,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Children Items Panel -->
                            <ItemsPresenter x:Name="ItemsHost"
                                          Grid.Row="1"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hierarchical Data Template for tree nodes -->
        <HierarchicalDataTemplate DataType="{x:Type local:ApprovalHistoryNode}" 
                                  ItemsSource="{Binding Children}">
            <Border BorderBrush="{DynamicResource GreenAccentBrush}" 
                    BorderThickness="0,0,0,1" 
                    Padding="8,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Column widths increased for better readability and spacing -->
                        <ColumnDefinition Width="200"/>
                        <!-- Исполнитель (ФИО) -->
                        <ColumnDefinition Width="150"/>
                        <!-- Срок -->
                        <ColumnDefinition Width="150"/>
                        <!-- Состояние -->
                        <ColumnDefinition Width="150"/>
                        <!-- Результат -->
                        <ColumnDefinition Width="180"/>
                        <!-- Дата поступления -->
                        <ColumnDefinition Width="180"/>
                        <!-- Дата завершения -->
                        <ColumnDefinition Width="*" MinWidth="200"/>
                        <!-- Комментарий -->
                    </Grid.ColumnDefinitions>

                    <!-- Исполнитель (ФИО) with indentation for child nodes -->
                    <TextBlock Grid.Column="0" 
                               Text="{Binding Record.RecipientName}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="{Binding Level, Converter={StaticResource LevelToIndentConverter}}"
                               Padding="0,2,15,2"/>

                    <!-- Срок -->
                    <TextBlock Grid.Column="1" 
                               Text="{Binding Record.Term, StringFormat='dd.MM.yyyy'}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,0"
                               Padding="0,2,15,2"/>

                    <!-- Состояние -->
                    <TextBlock Grid.Column="2" 
                               Text="{Binding Record.Status}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,0"
                               Padding="0,2,15,2"/>

                    <!-- Результат -->
                    <TextBlock Grid.Column="3" 
                               Text="{Binding Record.Result}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,0"
                               Padding="0,2,15,2"/>

                    <!-- Дата поступления -->
                    <TextBlock Grid.Column="4" 
                               Text="{Binding Record.ReceiptDate, StringFormat='dd.MM.yyyy HH:mm'}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,0"
                               Padding="0,2,15,2"/>

                    <!-- Дата завершения (Max across subtree) -->
                    <TextBlock Grid.Column="5" 
                               Text="{Binding MaxCompletionDate, StringFormat='dd.MM.yyyy HH:mm'}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,0"
                               Padding="0,2,15,2"/>

                    <!-- Комментарий -->
                    <TextBlock Grid.Column="6" 
                               Text="{Binding Record.Comment}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,0"
                               Padding="0,2,15,2"/>
                </Grid>
            </Border>
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Column Headers -->
        <Border Grid.Row="0" 
                Background="{DynamicResource AccentBrush}" 
                BorderBrush="{DynamicResource GreenAccentBrush}"
                BorderThickness="0,0,0,2">
            <Grid Margin="8,5">
                <Grid.ColumnDefinitions>
                    <!-- Column widths must match the data template -->
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Исполнитель (ФИО)" FontWeight="Bold" Foreground="White" Margin="18,0,15,0" TextWrapping="Wrap"/>
                <TextBlock Grid.Column="1" Text="Срок" FontWeight="Bold" Foreground="White" Margin="0,0,15,0" TextWrapping="Wrap"/>
                <TextBlock Grid.Column="2" Text="Состояние" FontWeight="Bold" Foreground="White" Margin="0,0,15,0" TextWrapping="Wrap"/>
                <TextBlock Grid.Column="3" Text="Результат" FontWeight="Bold" Foreground="White" Margin="0,0,15,0" TextWrapping="Wrap"/>
                <TextBlock Grid.Column="4" Text="Дата поступления" FontWeight="Bold" Foreground="White" Margin="0,0,15,0" TextWrapping="Wrap"/>
                <TextBlock Grid.Column="5" Text="Дата завершения" FontWeight="Bold" Foreground="White" Margin="0,0,15,0" TextWrapping="Wrap"/>
                <TextBlock Grid.Column="6" Text="Комментарий" FontWeight="Bold" Foreground="White" Margin="0,0,15,0" TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- TreeView -->
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Auto">
            <TreeView ItemsSource="{Binding}"
                      Background="Transparent"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource TreeViewItemStyle}">
                <TreeView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </TreeView.ItemsPanel>
            </TreeView>
        </ScrollViewer>
    </Grid>
</UserControl>