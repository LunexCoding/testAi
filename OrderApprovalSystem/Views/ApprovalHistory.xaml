<UserControl x:Class="OrderApprovalSystem.Views.ApprovalHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:components="clr-namespace:OrderApprovalSystem.Components"
             Background="{DynamicResource PrimaryBackgroundBrush}"
             Foreground="{DynamicResource TextBrush}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:CallMethodAction TargetObject="{Binding}" MethodName="viewLoaded"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Информация о заказе -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}" 
                BorderBrush="{DynamicResource AccentBrush}"
                BorderThickness="2" 
                CornerRadius="4" 
                Padding="10" 
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Заказ:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,0"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Text="{Binding Model.OrderInfo}" 
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>

                <Button Grid.Column="2" 
                        Command="{Binding RefreshCommand}"
                        ToolTip="Обновить историю"
                        Width="36" Height="36"
                        Margin="10,0,0,0"
                        Background="Transparent"
                        BorderThickness="0">
                    <TextBlock Text="⟳" FontSize="22" Foreground="{DynamicResource AccentBrush}"/>
                </Button>
            </Grid>
        </Border>

        <!-- TreeView с историей -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SecondaryBackgroundBrush}" 
                BorderBrush="{DynamicResource GreenAccentBrush}"
                BorderThickness="2" 
                CornerRadius="4" 
                Padding="10">

            <components:ApprovalHistoryTreeView DataContext="{Binding Model.HistoryTree}" />
        </Border>
    </Grid>
</UserControl>