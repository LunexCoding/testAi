<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== ЦВЕТА СВЕТЛОЙ ТЕМЫ ==================== -->
    <Color x:Key="PrimaryBackgroundColor">#FFEEEEEE</Color>
    <Color x:Key="SecondaryBackgroundColor">#FFFAFAFA</Color>
    <Color x:Key="BorderColor">#FFC0C0C0</Color>
    <Color x:Key="TextColor">#FF1E1E1E</Color>
    <Color x:Key="SecondaryTextColor">#FF555555</Color>
    <Color x:Key="DisabledBackgroundColor">#FFDDDDDD</Color>
    <Color x:Key="DisabledBorderColor">#FFB0B0B0</Color>
    <Color x:Key="DisabledForegroundColor">#FF777777</Color>
    <Color x:Key="AccentColor">#FFE67E22</Color>
    <Color x:Key="AccentHoverColor">#FFD35400</Color>
    <Color x:Key="AccentPressedColor">#FFBA4A00</Color>
    <Color x:Key="DataGridSelectionColor">#FFE67E22</Color>
    <Color x:Key="DataGridSelectionHoverColor">#FFD35400</Color>
    <Color x:Key="GreenAccentColor">#FF76C7B7</Color>
    <Color x:Key="GreenAccentHoverColor">#FF5BAA96</Color>
    <Color x:Key="GreenAccentPressedColor">#FF3D7A6B</Color>

    <!-- ==================== КИСТИ СВЕТЛОЙ ТЕМЫ ==================== -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}" />
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{StaticResource DisabledBackgroundColor}" />
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="{StaticResource DisabledBorderColor}" />
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="{StaticResource DisabledForegroundColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}" />
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource AccentPressedColor}" />
    <SolidColorBrush x:Key="DataGridSelectionBrush" Color="{StaticResource DataGridSelectionColor}" />
    <SolidColorBrush x:Key="DataGridSelectionHoverBrush" Color="{StaticResource DataGridSelectionHoverColor}" />
    <SolidColorBrush x:Key="GreenAccentBrush" Color="{StaticResource GreenAccentColor}" />
    <SolidColorBrush x:Key="GreenAccentHoverBrush" Color="{StaticResource GreenAccentHoverColor}" />
    <SolidColorBrush x:Key="GreenAccentPressedBrush" Color="{StaticResource GreenAccentPressedColor}" />

    <SolidColorBrush x:Key="GroupHeaderBackgroundBrush" Color="#FFC0C0C0"/>
    <SolidColorBrush x:Key="GroupHeaderTextBrush" Color="#FF333333"/>

    <!-- ==================== КИСТИ ДЛЯ КОНВЕНТЕРОВ ==================== -->
    <SolidColorBrush x:Key="ValidStatusBrush" Color="{DynamicResource GreenAccentColor}" Opacity="0.6"/>
    <SolidColorBrush x:Key="NeutralStatusBrush" Color="{DynamicResource SecondaryBackgroundColor}" Opacity="0.6"/>

</ResourceDictionary>
